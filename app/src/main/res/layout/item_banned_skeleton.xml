<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="@color/colorTextWhite">
        <ImageView
            android:id="@+id/iv_banned_head"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_centerVertical="true"
            android:background="@color/colorGray8"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/tv_banned_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@id/iv_banned_head"
            android:text="用户名称用户名称"
            android:textColor="@color/colorGray8"
            android:background="@color/colorGray8"
            android:textSize="15sp"/>
        <RelativeLayout
            android:id="@+id/rl_relieve"
            android:layout_width="84dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:background="@color/colorGray8"
            android:gravity="center"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_banned"
                android:visibility="invisible"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F2"
            android:layout_marginStart="16dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>
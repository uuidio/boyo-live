<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTextWhite"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/cb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:background="@color/colorGray8"
        android:button="@null" />
    <RelativeLayout
        android:id="@+id/rl_goods"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_toEndOf="@id/cb"
        android:layout_marginStart="15dp"
        android:background="@color/colorTextWhite">
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/colorGray8"/>
        <TextView
            android:id="@+id/tv_titile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_image"
            android:layout_toEndOf="@id/iv_image"
            android:text="商品名商品名商品名商品名"
            android:textSize="14sp"
            android:textColor="@color/colorGray8"
            android:background="@color/colorGray8"/>
        <TextView
            android:id="@+id/tv_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_titile"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/iv_image"
            android:visibility="invisible"
            android:text="商品货号: "
            android:textSize="14sp"
            android:textColor="@color/colorTextG3" />
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_titile"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/tv_num1"
            android:layout_marginStart="5dp"
            android:visibility="invisible"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/colorTextG3" />

        <TextView
            android:id="@+id/tv_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_image"
            android:layout_toEndOf="@id/iv_image"
            android:text="¥"
            android:textSize="14sp"
            android:textColor="@color/colorGray8"
            android:background="@color/colorGray8"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_image"
            android:layout_toEndOf="@id/tv_price1"

            android:text="商品价格价格"
            android:textSize="14sp"
            android:textColor="@color/colorGray8"
            android:background="@color/colorGray8"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rl_goods"
        android:background="@color/line" />
</RelativeLayout>
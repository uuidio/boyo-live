<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTextWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_goods"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginStart="10dp"
        android:background="@color/colorTextWhite">
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp" />
        <TextView
            android:id="@+id/tv_titile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_image"
            android:layout_toEndOf="@id/iv_image"
            android:text=""
            android:textSize="@dimen/h6"
            android:textColor="@color/colorTextBlack" />
        <TextView
            android:id="@+id/tv_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_titile"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/iv_image"
            android:visibility="invisible"
            android:text="商品货号: "
            android:textSize="@dimen/h6"
            android:textColor="@color/colorTextG3" />
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_titile"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/tv_num1"
            android:layout_marginStart="5dp"
            android:visibility="invisible"
            android:text=""
            android:textSize="@dimen/h6"
            android:textColor="@color/colorTextG3" />

        <TextView
            android:id="@+id/tv_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_image"
            android:layout_toEndOf="@id/iv_image"
            android:text="¥"
            android:textSize="@dimen/h6"
            android:textColor="@color/colorSendName4" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_image"
            android:layout_toEndOf="@id/tv_price1"
            android:layout_marginStart="5dp"
            android:text=""
            android:textSize="@dimen/h6"
            android:textColor="@color/colorSendName4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_cb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="35dp">
        <CheckBox
            android:id="@+id/cb"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:background="@drawable/checkbox_selectors"
            android:button="@null" />
    </RelativeLayout>

    <TextView
        android:id="@+id/cb_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:text=""
        android:textSize="16sp"/>

</RelativeLayout>
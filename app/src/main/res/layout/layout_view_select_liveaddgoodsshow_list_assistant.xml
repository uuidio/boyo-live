<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTextWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_goods"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginLeft="15dp"
        android:background="@color/colorTextWhite">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp" />
        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/num_round"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorTextWhite"
                android:textSize="12sp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_titile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_image"
            android:layout_toEndOf="@id/iv_image"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/colorTextG4" />
        <TextView
            android:id="@+id/tv_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_titile"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/iv_image"
            android:visibility="gone"
            android:text="商品货号: "
            android:textSize="14sp"
            android:textColor="@color/colorTextG3" />
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_titile"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/tv_num1"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/colorTextG3" />

        <TextView
            android:id="@+id/tv_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_image"
            android:layout_toEndOf="@id/iv_image"
            android:text="¥"
            android:textSize="14sp"
            android:textColor="@color/colorSendName4" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_image"
            android:layout_toEndOf="@id/tv_price1"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/colorSendName4" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rl_goods"
        android:background="@color/line" />

</RelativeLayout>
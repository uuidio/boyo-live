<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/w_742px_port"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_rectangle">
    <RelativeLayout
        android:layout_width="@dimen/w_742px_port"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/h_380px_port">
        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h_120px_port"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/_font_36px_port" />
        <View
            android:id="@+id/view_liner2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv"
            android:layout_marginTop="@dimen/h_107px_port"
            android:background="#e1e1e1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_110px_port"
            android:layout_below="@id/view_liner2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/colorTextG4"
                android:textSize="@dimen/_font_36px_port" />
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/_font_36px_port"
                android:background="@drawable/btn_bottom_right"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
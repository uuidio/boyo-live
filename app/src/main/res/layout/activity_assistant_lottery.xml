<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="contentDescription">

    <com.kol.jumhz.common.widget.ActivityTitle
        android:id="@+id/layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:canBack="true"
        app:titleText="@string/assistant_app_lottery"
        app:moreText="@string/activity_lottery_list"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_lottery_title"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_lottery_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/activity_lottery_name"
                android:textColor="@color/colorTextG4"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/et_lottery_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/tv_lottery_title"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@null"
                android:hint="@string/activity_add_live_title_hint"
                android:textColorHint="@color/colorTextG2"
                android:textColor="@color/colorTextG4"
                android:textSize="16sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F2"
            android:layout_marginStart="16dp"
            android:layout_alignParentBottom="true" />
        <RelativeLayout
            android:id="@+id/rl_lottery_goods"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_lottery_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/activity_lottery_goods"
                android:textColor="@color/colorTextG4"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/et_lottery_goods"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/tv_lottery_goods"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@null"
                android:hint="@string/activity_add_live_title_hint"
                android:textColorHint="@color/colorTextG2"
                android:textColor="@color/colorTextG4"
                android:textSize="16sp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_lottery_num"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_lottery_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/activity_lottery_num"
                android:textColor="@color/colorTextG4"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/et_lottery_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/tv_lottery_num"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:inputType="number"
                android:background="@null"
                android:hint="@string/activity_add_live_title_hint"
                android:textColorHint="@color/colorTextG2"
                android:textColor="@color/colorTextG4"
                android:textSize="16sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F2"
            android:layout_marginStart="16dp"
            android:layout_alignParentBottom="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_lottery_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/activity_lottery_time"
                android:textColor="@color/colorTextG4"
                android:textSize="16sp" />
            <RelativeLayout
                android:id="@+id/rl_lottery_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/tv_lottery_time"
                android:descendantFocusability="beforeDescendants">
                <EditText
                    android:id="@+id/et_lottery_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:background="@null"
                    android:hint="@string/activity_add_live_title_hint"
                    android:inputType="number"
                    android:textColorHint="@color/colorTextG2"
                    android:textColor="@color/colorTextG4"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/et_lottery_time"
                    android:layout_marginLeft="10dp"
                    android:text="ç§’"
                    android:textColorHint="@color/colorTextG2"
                    android:textColor="@color/colorTextG4"
                    android:textStyle="bold"
                    android:textSize="18sp" />
                <!--<ImageView
                    android:id="@+id/iv_live_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:enabled="false"
                    android:src="@drawable/ic_right"
                    android:tint="@color/colorGray3" />-->
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15.5dp"
        android:text="@string/activity_lottery_tips"
        android:textSize="12sp"
        android:textColor="@color/colorTextG2"/>

    <Button
        android:id="@+id/btn_lottery_ok"
        android:layout_width="296dp"
        android:layout_height="50dp"
        android:layout_marginTop="85dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/btn_sure"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:clickable="true"
        android:background="@drawable/btn_login" />


</LinearLayout>